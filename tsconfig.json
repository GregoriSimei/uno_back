{
    "compilerOptions": {
      "sourceMap": true,
      "target": "ES2019",
      "lib": ["esnext"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "rootDir": "src",
      "baseUrl": "./src",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "vite.config.ts", "**/*.spec.*", "src/tests/**"]
  }